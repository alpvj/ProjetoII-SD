module registradorY(clock, func, in, outY);

input wire clock;
input wire [2:0] func;
input wire [3:0] in;
output reg [3:0] out;

parameter HOLD = 3'b000;
parameter LOAD = 3'b001;
parameter SHIFTR = 3'b010;
parameter SHIFTL = 3'b011;
parameter RESET = 3'b100;

always @(posedge clock)begin
	case(func)
		HOLD:
			out <= out;
		LOAD:
			out <= in;
		SHIFTR:
			out <= out >> 1;
		SHIFTL:
			out <= out << 1;
		RESET:
			out <= 4'b0000;
	endcase
end
endmodule